<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enter.MainActivity2"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/charac_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:adjustViewBounds="true"
        android:background="@drawable/charac_back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Set your character's name!"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Your character's name will continue to \nbe used in our app"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile_icon" />

        <EditText
            android:id="@+id/charac_name2"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/btn_confirm"
        android:layout_margin="20dp"
        android:paddingTop="10dp"
        android:layout_width="380dp"
        android:layout_height="110dp"
        android:background="@drawable/btn_charac" />
</LinearLayout>